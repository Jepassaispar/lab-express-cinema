<div id="movies">

    <h2>Ironhack Cinema</h2>

    <h3>Click on the movie to check the showtimes</h3>

    <ul id="movieList">
        {{#each movies}}
        <li class="movie">
            <img src="{{this.image}}" alt="">
            <p>{{this.title}}</p>
            <a href="/info/{{this.id}}">See more</a>
        </li>
        {{/each}}
    </ul>

</div>